<h1>Listing charges</h1>

<h2>Failed charges</h2>

<table id='failedTable'>
  <thead>
    <tr>
     <th>Customer</th>
      
     
      <th>Amount</th>
     
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
	<% if charge.charge_type =='failed' %>
	      <tr>
		<td><%= charge.customer.firstName + " " + charge.customer.lastName %></td>
		<td><%= charge.amount %></td>
		<td><%= charge.created %></td>		
		
	      </tr>
	<% end %>
    <% end %>
  </tbody>
</table>

<br>

<h2>Disputed charges</h2>

<table id='disputedTable'>
  <thead>
    <tr>
      <th>Created</th>
      <th>Paid</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Refunded</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
	<% if charge.charge_type =='disputed' %>
	      <tr>
		<td><%= charge.created %></td>
		<td><%= charge.paid %></td>
		<td><%= charge.amount %></td>
		<td><%= charge.currency %></td>
		<td><%= charge.refunded %></td>
		<td><%= charge.customer.firstName + " " + charge.customer.lastName %></td>
		
	      </tr>
	<% end %>
    <% end %>
  </tbody>
</table>

<br>

